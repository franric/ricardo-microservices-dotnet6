@model IEnumerable<GeekShoping.Web.Models.Produto.ProdutoModel>

<br/>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Produtos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProdutoCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i>Criar Novo Produto
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Categoria
                </th>
                <th>
                    Preço
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                       <a asp-action="ProdutoUpdate" class="btn btn-success" asp-route-id="@item.Id">
                           <i class="fas fa-edit"></i>
                       </a>
                       <a asp-action="ProdutoDelete" class="btn btn-danger" asp-route-id="@item.Id">
                           <i class="fas fa-trash"></i>
                       </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>